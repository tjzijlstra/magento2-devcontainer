services:
  php:
    volumes:
      - ../:/workspace:cached
      - ./magento2-devcontainer/mailpit/mailpit.ini.sample:/usr/local/etc/php/conf.d/mailpit.ini:ro
    working_dir: /workspace

  nginx:
    environment:
      - MAGE_ROOT_DIR=/workspace
    volumes:
      - ../:/workspace:cached
      - ./magento2-devcontainer/nginx/default:/etc/nginx/templates